@model AnketaDodajViewModel
@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Areas/Administracija/Views/Shared/MasterAdmin.cshtml";
}

<h2>Dodaj anketu</h2>

<div class="row">
    <div class="col-md-4">
        <form action="/Administracija/Anketa/Snimi/" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label">Naziv ankete</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumAnkete" class="control-label">Datum ankete</label>
                <input asp-for="DatumAnkete" class="form-control" />
                <span asp-validation-for="DatumAnkete" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <button class="btn btn-primary">Snimi</button>
                <a href="/Administracija/Anketa/Index/" class="btn btn-primary">Nazad</a>
            </div>
        </form>
    </div>
</div>