@model LinkoviDodajViewModel
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj link</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form action="/Administracija/Linkovi/Snimi/" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label">Naziv linka</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="URL" class="control-label">URL</label>
                <input asp-for="URL" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategorija" class="control-label">Kategorija linka</label>
                <select asp-for="KategorijeLinkovaId" asp-items="@Model.Kategorija" class="form-control">
                    <option value="">(Odaberite kategoriju)</option>
                </select>
                <span asp-validation-for="KategorijeLinkovaId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button class="btn btn-primary">Snimi</button>
                <a href="/Administracija/Linkovi/Index/" class="btn btn-primary">Nazad</a>
            </div>
        </form>
    </div>
</div>
