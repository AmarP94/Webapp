@model FAQDodajViewModel
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj pitanje</h2>

<div class="row">
    <div class="col-md-4">
        <form action="/Administracija/FAQ/Snimi/" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pitanje" class="control-label">Pitanje </label>
                <input asp-for="Pitanje" class="form-control" />
                <span asp-validation-for="Pitanje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Odgovor" class="control-label">Odgovor</label>
                <input asp-for="Odgovor" class="form-control" />
                <span asp-validation-for="Odgovor" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <button class="btn btn-primary">Snimi</button>
                <a href="/Administracija/FAQ/Index/" class="btn btn-primary">Nazad</a>
            </div>
        </form>
    </div>
</div>