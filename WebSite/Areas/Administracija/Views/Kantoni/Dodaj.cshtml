@model KantoniDodajViewModel
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form action="/Administracija/Kantoni/Snimi/" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label">Naziv kantona</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oznaka" class="control-label">Oznaka kantona</label>
                <input asp-for="Oznaka" class="form-control" />
                <span asp-validation-for="Oznaka" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-primary">Snimi</button>
                <a href="/Administracija/Kantoni/Index/" class="btn btn-primary">Nazad</a>
            </div>
        </form>
    </div>
</div>
