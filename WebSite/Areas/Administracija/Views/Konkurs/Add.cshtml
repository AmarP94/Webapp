@model KonkursAddViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Administracija/Views/Shared/MasterAdmin.cshtml";
}

<h2>Dodaj konkurs</h2>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form action="/Administracija/Konkurs/Snimi/" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NazivKonkursa" class="control-label">Naziv konkursa</label>
                <input asp-for="NazivKonkursa" class="form-control" />
                <span asp-validation-for="NazivKonkursa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumDodavanja" class="control-label"></label>
                <input asp-for="DatumDodavanja" class="form-control" />
                <span asp-validation-for="DatumDodavanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipKonkursa" class="control-label">Tip konkursa</label>
                <select asp-for="TipKonkursaId" asp-items="@Model.TipKonkursa" class="form-control">
                    <option value="">(Odaberite tip konkursa)</option>
                </select>
                <span asp-validation-for="TipKonkursaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sadrzaj" class="control-label">Sadrzaj</label>
                <textarea asp-for="Sadrzaj" class="form-control" ></textarea>
                <span asp-validation-for="Sadrzaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Snimi</button>
                <a href="/Administracija/Konkurs/Index/" class="btn btn-primary">Nazad</a>
            </div>
        </form>
    </div>
</div>

