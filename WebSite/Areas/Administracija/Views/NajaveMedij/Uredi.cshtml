@model NajaveMedijUrediViewModel
@{
    ViewData["Title"] = "Uredi";
    Layout = "~/Areas/Administracija/Views/Shared/MasterAdmin.cshtml";


}

<h2>Uredi najavu</h2>

<form action="/Administracija/NajaveMedij/SnimiUredi/" method="post">
    <table>
        <tr>
            <td>Naslov najave : </td>
            <td>@Model.Naslov</td>
        </tr>
        <tr>
            <td>Datum objave : </td>
            <td>@Model.DatumObjave.ToShortDateString()</td>
        </tr>
        <tr>
            <td>Datum izmjene : </td>
            <td>@Html.EditorFor(x=>x.DatumIzmjene)</td>
        </tr>
        <tr>
            <td>Sadrzaj : </td>
            <td>@Html.TextAreaFor(x=>x.Sadrzaj)</td>
        </tr>
    </table>
    @Html.HiddenFor(x=>x.Id)
    <button class="btn btn-primary">Snimi</button>
    <a href="/Administracija/NajaveMedij/Index/" class="btn btn-primary">Nazad</a>"
</form>