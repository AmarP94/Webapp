@model NajaveMedijDodajViewModel
@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Areas/Administracija/Views/Shared/MasterAdmin.cshtml";
}

<h2>Dodaj najavu</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form action="/Administracija/NajaveMedij/Snimi/" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naslov" class="control-label">Naslov najave</label>
                <input asp-for="Naslov" class="form-control" />
                <span asp-validation-for="Naslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumObjave" class="control-label">Datum objave</label>
                <input asp-for="DatumObjave" class="form-control" />
                <span asp-validation-for="DatumObjave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sadrzaj" class="control-label">Sadrzaj</label>
                <input asp-for="Sadrzaj" class="form-control" />
                <span asp-validation-for="Sadrzaj" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-primary">Snimi</button>
                <a href="/Administracija/NajaveMedij/Index/" class="btn btn-primary">Nazad</a>
            </div>
        </form>
    </div>
</div>
