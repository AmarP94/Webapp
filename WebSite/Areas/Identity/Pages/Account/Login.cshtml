@page
@model LoginModel

@{
    ViewBag.Title = "Prijava";

}

<!DOCTYPE html>

<html>
<head>
    <partial name="~/Views/Shared/_Meta.cshtml" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/js/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>


</head>
<body>
    <div class="container">
        <div class="row d-flex justify-content-center" style="margin-top:50px">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xl-6" style="font-family:Tahoma">
                                <h4>Administracija - Prijava</h4>
                            </div>
                        </div>
                        <hr />
                    </div>
                    <div class="panel-body">
                        <!-- Potreban if uslov ako zelimo da zaustavimo brutforse napad kasnije implementirat -->
                        <div class="row">
                            <div class="col-lg-12">
                                <section>
                                    <form method="post" style="display: block;">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <input asp-for="Input.Email" class="form-control" placeholder="Korisnički Email" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Input.Password" class="form-control" placeholder="Lozinka" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="form-control btn btn-primary">Prijava</button>
                                        </div>
                                        <div class="form-group">
                                            <p>
                                                <a asp-page="./ForgotPassword">Zaboraviliste Vašu lozinku?</a>
                                            </p>
                                        </div>
                                    </form>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>






